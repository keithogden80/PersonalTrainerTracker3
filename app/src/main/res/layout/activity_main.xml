<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.personaltrainertracker.MainActivity">

    <fragment
        android:id="@+id/fragment3"
        android:name="com.bignerdranch.android.personaltrainertracker.LoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_logged_in"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAddCustomer"
        android:text="Add Customer"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment3"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCustomerList"
        android:text="Customer List"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCustomerSession"
        android:text="Customer Session"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSign"
        android:text="Sign Session"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>
